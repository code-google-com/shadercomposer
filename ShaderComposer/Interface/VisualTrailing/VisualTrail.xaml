<UserControl x:Class="ShaderComposer.Interface.VisualTrailing.VisualTrail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:VisualTrailing="clr-namespace:ShaderComposer.Interface.VisualTrailing"
             xmlns:Canvas="clr-namespace:ShaderComposer.Interface.Designer.Canvas"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Visible">
        <Canvas:DynamicCanvas x:Name="Canvas" ClipToBounds="True" SizeHeightToContent="True" SizeWidthToContent="True">

            <Rectangle Name="CanvasBackground" Fill="#FFEFEFEF" Width="{Binding ElementName=Canvas, Path=ActualWidth}" Height="{Binding ElementName=Canvas, Path=ActualHeight}"/>
            
        </Canvas:DynamicCanvas>
    </ScrollViewer>
    
</UserControl>
